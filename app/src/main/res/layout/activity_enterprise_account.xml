<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:divider="@color/divide_main_gray"
            android:showDividers="middle">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dimen_5"
                android:drawableLeft="@drawable/bg_tag"
                android:text="企业基本信息"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="店名："
                    android:textColor="@color/text_main_gray"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="请输入店名"
                    android:background="@null"
                    android:inputType="text"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_main_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系人："
                    android:textColor="@color/text_main_gray"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="请输入联系人"
                    android:background="@null"
                    android:inputType="text"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_main_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系方式："
                    android:textColor="@color/text_main_gray"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="@string/hint_input_mobile"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_main_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_white"
            android:divider="@color/divide_main_gray"
            android:layout_marginTop="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dimen_5"
                android:drawableLeft="@drawable/bg_tag"
                android:text="车辆照片"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_shop"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="160dp"
                    android:layout_marginRight="2.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_shop"/>
                <ImageView
                    android:id="@+id/iv_license"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="160dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="2.5dp"
                    android:src="@drawable/ic_license"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_new_pressed"
            android:gravity="center"
            android:text="上传"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
</ScrollView>