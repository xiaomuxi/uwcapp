<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_10"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_model"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_car_live"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A6L"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_marginTop="@dimen/dimen_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_car_model_money"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_main_gray"/>
        <TextView
            android:id="@+id/tv_car_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="@string/text_car_model_count"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_main_gray"/>
    </LinearLayout>
</LinearLayout>